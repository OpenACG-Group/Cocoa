{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2021",
        "moduleResolution": "Classic",
        "outDir": "./out",
        "isolatedModules": false,
        "baseUrl": ".",
        "paths": {
            "internal://*": [ "internal/*" ],
            "synthetic://*": [ "synthetics/*" ],
            "*": [ "synthetics/*" ]
        },
        "sourceMap": true
    },
    "include": [
        "./global/infrastructure.d.ts",
        "./global/introspect.d.ts"
    ],
    "files": [
        "synthetics/core.d.ts",
        "synthetics/typetraits.d.ts",
        "synthetics/glamor.d.ts",
        "synthetics/pixencoder.d.ts",
        "synthetics/utau.d.ts",
        "synthetics/paragraph.d.ts",
        "synthetics/resources.d.ts",
        "synthetics/lottie.d.ts",
        "synthetics/svg.d.ts",

        "./core/typetraits.ts",
        "./core/format.ts",
        "./core/assert.ts",
        "./core/linked_list.ts",
        "./core/formatter.ts",

        "samples/sknative-lottie-viewer.ts",
        "samples/sknative-path-measure.ts",
        // "samples/sknative-svg-rasterizer.ts",
        "samples/sknative-svg-to-skp.ts",
        // "samples/sknative-pathtext.ts",
        "samples/sknative-pathtext-interactive.ts",
        "samples/sknative-memory-composite.ts",
        "samples/mediapresent-video-player.ts",
        "samples/vizmoe-simplest-scene.ts",

        "vizmoe/base/application.ts",
        "vizmoe/base/event-dispatcher.ts",
        "vizmoe/render/geometry.ts",
        "vizmoe/render/draw-context.ts",
        "vizmoe/render/draw-context-submitter.ts",
        "vizmoe/render/draw-context-static-texture.ts",
        "vizmoe/render/color.ts",
        "vizmoe/render/rectangle.ts",
        "vizmoe/render/vector.ts",
        "vizmoe/render/render-node.ts",
        "vizmoe/render/render-node-composite-attributes.ts"
    ],
    "exclude": [
        "out"
    ]
}
