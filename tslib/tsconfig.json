{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2021",
        "moduleResolution": "Classic",
        "outDir": "./out",
        "isolatedModules": false,
        "baseUrl": ".",
        "paths": {
            "internal://*": [ "internal/*" ],
            "synthetic://*": [ "synthetics/*" ],
            "*": [ "synthetics/*" ]
        },
        "sourceMap": true
    },
    "include": [
        "./global/infrastructure.d.ts",
        "./global/introspect.d.ts"
    ],
    "files": [
        "synthetics/core.d.ts",
        "synthetics/typetraits.d.ts",
        "synthetics/glamor.d.ts",
        "synthetics/utau.d.ts",
        "synthetics/paragraph.d.ts",

        "./core/typetraits.ts",
        "./core/format.ts",
        "./core/assert.ts",
        "./core/linked_list.ts",
        "./core/formatter.ts",

        /*
        "samples/sknative-offscreen-drawtextblob.ts",
        "samples/sknative-offscreen-drawpatch.ts",
        "samples/sknative-offscreen-hilbert.ts",
        "samples/sknative-window.ts",
        "samples/sknative-runtime-effect.ts",
        "samples/paragraph-simple-layout.ts",
        */

        "vizmoe/base/EventDispatch.ts",
        "vizmoe/graphics/Color.ts",
        "vizmoe/graphics/Rect.ts",
        "vizmoe/graphics/Vector.ts",
        "vizmoe/graphics/DrawContext.ts",

        "vizmoe/render/RenderObject.ts",
        "vizmoe/render/CompositorRenderObject.ts",
        "vizmoe/render/PainterRenderObject.ts",
        "vizmoe/render/TransformerRenderObject.ts",
        "vizmoe/render/VideoTextureRenderObject.ts",
        "vizmoe/render/QuickRenderTreeConstructor.ts",
        "vizmoe/render/RenderTreeLinearization.ts"
    ],
    "exclude": [
        "out"
    ]
}
