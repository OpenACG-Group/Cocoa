{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "Classic",
        "outDir": "./out",
        "isolatedModules": false,
        "baseUrl": ".",
        "paths": {
            "internal://*": [ "internal/*" ],
            "synthetic://*": [ "synthetics/*" ],
            "*": [ "synthetics/*" ]
        },
        "sourceMap": true,
        "allowJs": true,
        "lib": [ "ES2023", "DOM" ],
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        // TODO(sora): enable strictNullChecks and structPropertyInitialization,
        "useDefineForClassFields": false
    },
    "include": [
        "./global/infrastructure.d.ts",
        "./global/introspect.d.ts"
    ],
    "files": [
        "synthetics/workers.d.ts",
        "synthetics/core.d.ts",
        "synthetics/typetraits.d.ts",
        "synthetics/glamor.d.ts",
        "synthetics/pixencoder.d.ts",
        "synthetics/utau.d.ts",
        "synthetics/paragraph.d.ts",
        "synthetics/resources.d.ts",
        "synthetics/lottie.d.ts",
        "synthetics/svg.d.ts",

        "core/typetraits.ts",
        "core/format.ts",
        "core/assert.ts",
        "core/linked_list.ts",
        "core/formatter.ts",
        "core/event-dispatcher.ts",
        "core/error.ts",

        "samples/sknative-lottie-viewer.ts",
        "samples/sknative-path-measure.ts",
        "samples/sknative-svg-rasterizer.ts",
        "samples/sknative-svg-to-skp.ts",
        "samples/sknative-pathtext.ts",
        "samples/sknative-pathtext-interactive.ts",
        "samples/sknative-find-convex-hull.ts",
        "samples/sknative-electric-field.ts",
        "samples/gpu-offscreen-surface-view.ts",
        "samples/wasm-cairo-hello.ts",
        "samples/wasm-cairo-sharing-composite.ts",
        "samples/wasm-cairo-recording-surface.ts",
        "samples/wasm-cairo-script.ts",
        "samples/wasm-opencv-fft-illustrator.ts",
        "samples/gsk-hello.ts",

        /*
        "samples/mediapresent-audio-fft.ts",
        "samples/vizmoe-paragraph-layout.ts",
        "samples/vizmoe-video-present.ts",
        "samples/vizmoe-video-present-opencv-cvtcolor.ts",
