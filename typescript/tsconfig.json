{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2021",
        "moduleResolution": "Classic",
        "outDir": "./out",
        "isolatedModules": false,
        "baseUrl": ".",
        "paths": {
            "internal://*": [ "internal/*" ],
            "synthetic://*": [ "synthetics/*" ],
            "*": [ "synthetics/*" ]
        }
    },
    "include": [
        "./global/infrastructure.d.ts",
        "./global/introspect.d.ts"
    ],
    "files": [
        "./synthetics/core.d.ts",
        "./synthetics/glamor.d.ts",
        "./synthetics/utau.d.ts",
        "./synthetics/paragraph.d.ts",

        "./core/format.ts",
        "./core/assert.ts",
        "./core/linked_list.ts",
        "./core/pretty_printer.ts",

        "GL/utils.ts",
        "GL/window.ts",

        "samples/sknative_offscreen_drawtextblob.ts",
        "samples/sknative_offscreen_hilbert.ts",
        "samples/sknative_window.ts",
        "samples/sknative_runtime_effect.ts",
        "samples/paragraph_simple_layout.ts"
    ]
}
