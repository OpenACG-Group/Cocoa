{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2021",
        "moduleResolution": "Classic",
        "outDir": "./out",
        "isolatedModules": false,
        "baseUrl": ".",
        "paths": {
            "internal://*": [ "internal/*" ],
            "synthetic://*": [ "synthetics/*" ],
            "*": [ "synthetics/*" ]
        },
        "sourceMap": true,
        "allowJs": true,
        "lib": [ "ES2021", "DOM" ]
    },
    "include": [
        "./global/infrastructure.d.ts",
        "./global/introspect.d.ts"
