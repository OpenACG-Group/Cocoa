        "vizmoe/render/vector.ts",
        "vizmoe/render/render-node.ts",
        "vizmoe/render/render-node-composite-attributes.ts",
        "vizmoe/render/widget-base.ts",
        "vizmoe/render/widget-decoration.ts",
        "vizmoe/render/widgets-helper.ts",
        "vizmoe/render/widgets-trivial-container.ts",
