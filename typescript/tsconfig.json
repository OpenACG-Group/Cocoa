        "vizmoe/render/widgets-helper.ts",
        "vizmoe/render/widgets-trivial-container.ts",
        "vizmoe/render/widgets-boxmodel-container.ts",
        "vizmoe/render/widgets-drawable-solid.ts",

        "wasm/wasm-loader-polyfill.ts"
